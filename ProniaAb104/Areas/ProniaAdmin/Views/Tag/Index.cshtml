@model List<Tag>

@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Tags Table</h4>

            <a asp-controller="Tag" asp-action="Create" class="btn btn-warning btn-warning">Create Tag </a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Products Count
                            </th>
                            <th>
                                Settings
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Tag tag in Model)
                        {
                            count++;
                            <tr>
                                <td>
                                    @count
                                </td>
                                <td>
                                    @tag.Name
                                </td>
                                <td>
                                    @tag.ProductTags.Count
                                </td>
                                <td>
                                    <a asp-action="update" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-inverse-success btn-success"><i class="mdi mdi-border-color"></i></a>
                                    <a asp-action="delete" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-inverse-danger btn-danger"><i class="mdi mdi-delete"></i></a>
                                    <a asp-action="detail" asp-controller="tag" asp-route-id="@tag.Id" class="btn btn-inverse-primary btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>