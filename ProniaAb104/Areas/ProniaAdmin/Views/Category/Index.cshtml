@model List<Category>
@{
    int count = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Category Table</h4>

                        <a asp-action="create" asp-controller="category" class="btn btn-warning btn-warning">Create Category</a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Products Count
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (Category category in Model)
                                    {
                                        count++;
                                        <tr>

                                            <td>
                                                @count
                                            </td>
                                            <td>
                                                @category.Name
                                            </td>
                                            <td>
                                                @category.Products.Count
                                            </td>
                                            <td>
                                                <a asp-action="update" asp-controller="category" asp-route-id="@category.Id" class="btn btn-inverse-success btn-success"><i class="mdi mdi-border-color"></i></a>
                                                <a asp-action="delete" asp-controller="category" asp-route-id="@category.Id" class="btn btn-inverse-danger btn-danger"><i class="mdi mdi-delete"></i></a>
                                                <a asp-action="detail" asp-controller="category" asp-route-id="@category.Id" class="btn btn-inverse-primary btn-primary"><i class="mdi mdi-open-in-new"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>