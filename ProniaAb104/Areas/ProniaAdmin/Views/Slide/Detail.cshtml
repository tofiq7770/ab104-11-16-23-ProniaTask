@model Slide

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Detail</h2>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <div class="col-6">
                                    <img src="~/assets/images/slider/@Model.Image" style="width:200px; height:200px;object-fit:cover" /><br />
                                    <br/>
                                    <h2>Title: @Model.Title</h2>
                                    <br/>
                                    <h2>Subitle: @Model.SubTitle</h2>
                                    <br/>
                                    <h3>Description: @Model.Description</h3>
                                    <br/>
                                    <a class="btn btn-inverse-primary" asp-action="Index" asp-controller="Slide"><i class="mdi mdi-arrow-left-bold"></i></a>
                                    <a asp-action="update" asp-controller="slide" asp-route-id="@Model.Id" class="btn btn-inverse-success btn-success"><i class="mdi mdi-border-color"></i></a>
                                    <a asp-action="delete" asp-controller="slide" asp-route-id="@Model.Id" class="btn btn-inverse-danger btn-danger"><i class="mdi mdi-delete"></i></a>

                                </div>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

