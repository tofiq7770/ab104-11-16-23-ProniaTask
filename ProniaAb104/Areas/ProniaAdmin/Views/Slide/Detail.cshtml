@model Slide

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Detail</h2>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <div class="col-6">
                                    <img src="~/assets/images/slider/@Model.Image" style="width:200px; height:200px;object-fit:cover" />
                                    <h2>@Model.Title</h2>
                                    <p>@Model.Description</p>
                                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Slide">Go Back</a>
                                </div>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

